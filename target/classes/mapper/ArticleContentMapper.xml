<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rssreader.mapper.ArticleContentMapper">

    <resultMap id="BaseResultMap" type="com.rssreader.entity.ArticleContent">
        <id column="id" property="id"/>
        <result column="article_id" property="articleId"/>
        <result column="content" property="content"/>
        <result column="plain_text" property="plainText"/>
        <result column="word_count" property="wordCount"/>
        <result column="fetch_status" property="fetchStatus"/>
        <result column="fetch_time" property="fetchTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="findByArticleId" resultMap="BaseResultMap">
        SELECT * FROM article_content WHERE article_id = #{articleId}
    </select>

    <insert id="insert" parameterType="com.rssreader.entity.ArticleContent" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO article_content (article_id, content, plain_text, word_count, fetch_status, fetch_time)
        VALUES (#{articleId}, #{content}, #{plainText}, #{wordCount}, #{fetchStatus}, #{fetchTime})
    </insert>

    <update id="update" parameterType="com.rssreader.entity.ArticleContent">
        UPDATE article_content
        SET content = #{content},
            plain_text = #{plainText},
            word_count = #{wordCount},
            fetch_status = #{fetchStatus},
            fetch_time = #{fetchTime}
        WHERE article_id = #{articleId}
    </update>

    <delete id="deleteByArticleId">
        DELETE FROM article_content WHERE article_id = #{articleId}
    </delete>

</mapper>
